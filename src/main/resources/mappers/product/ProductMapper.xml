<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.plateer.fittingroombo.product.mapper.ProductMapper">

    <resultMap id="ProductDTO" type="org.plateer.fittingroombo.product.dto.ProductDTO">
        <id column="pr_no" property="prNo"/>
        <result column="pr_brand" property="prBrand"/>
        <result column="pr_name" property="prName"/>
        <result column="pr_price" property="prPrice"/>
        <result column="pr_create_dt" property="prCreateDt"/>
        <result column="pr_modify_dt" property="prModifyDt"/>
        <collection property="topFiles" column="{pr_no = pr_no}" ofType="org.plateer.fittingroombo.product.dto.ProductDTO" select="selectTopFiles" />
        <collection property="bottomFiles" column="{pr_no = pr_no}" ofType="org.plateer.fittingroombo.product.dto.ProductDTO" select="selectBottomFiles" />
    </resultMap>

    <select id="selectTopFiles" resultType="org.plateer.fittingroombo.product.dto.ProductFileDTO">
        SELECT prf_no, prf_name, prf_uuid, prf_type, prf_status, pr_no
        FROM tbl_product_file
        WHERE prf_type = 'TOP' and pr_no = 67
    </select>

    <select id="selectBottomFiles" resultType="org.plateer.fittingroombo.product.dto.ProductFileDTO">
        SELECT prf_no, prf_name, prf_uuid, prf_type, prf_status, pr_no
        FROM tbl_product_file
        WHERE prf_type = 'BOTTOM' and pr_no = 67
    </select>

    <select id="getProduct" resultMap="ProductDTO">
        SELECT *
        FROM tbl_product
        WHERE pr_no = #{prNo}
    </select>

